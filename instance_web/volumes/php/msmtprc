# Valeurs par défaut pour tous les comptes.
defaults
auth           on
tls            on
tls_starttls   on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

# Exemple pour un compte OVH
account        ovh
host           ssl0.ovh.net
port           587
user           username
password       XXXXXXXXXX

# Exemple pour un compte Gmail
account        gmail
auth           plain
host           smtp.gmail.com
port           587
user           username
password       XXXXXXXXXX

# Définir le compte par défaut
account default : ovh
